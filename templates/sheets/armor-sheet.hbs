<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img
      src="{{item.img}}"
      data-edit="img"
      title="{{item.name}}"
      height="64"
      width="64"
    />
    <h1>
      <input name="name" type="text" value="{{item.name}}" placeholder="Name" />
    </h1>
  </header>
  <div class="sheet-content">
    <table>
      <tr>
        <th>
          SP
        </th>
        <th>
          Location
        </th>
        <th>
          Ablation
        </th>
        <th>
          Penalty
        </th>
      </tr>
      <tr>
        <td>
          <input
            name="data.sp"
            type="text"
            value={{data.sp}}
            data-dtype="Number"
          />
        </td>
        <td>
          <select name="data.location">
            {{#select data.location}}
              {{#each config.location as |name|}}
                <option value="{{name}}">
                  {{name}}
                </option>
              {{/each}}
            {{/select}}
          </select>
        </td>
        <td>
          <input
            name="data.ablation"
            type="text"
            value={{data.ablation}}
            data-dtype="Number"
          />
        </td>
        <td>
          <input
            name="data.penalty"
            type="text"
            value={{data.penalty}}
            data-dtype="Number"
          />
        </td>
      </tr>
    </table>
    {{editor
      content=data.description
      target="data.description"
      button=true
      owner=owner
      editable=editable
    }}
  </div>
</form>
{{log data}}