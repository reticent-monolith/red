<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img
      src="{{item.img}}"
      data-edit="img"
      title="{{item.name}}"
      height="64"
      width="64"
    />
    <h1>
      <input name="name" type="text" value="{{item.name}}" placeholder="Name" />
    </h1>
  </header>
  <div class="sheet-content">
    <table>
      <tr>
        <th>
          Skill
        </th>
        <th>
          Damage
        </th>
        <th>
          ROF
        </th>
      </tr>
      <tr>
        <td>
          <select name="data.attackSkill">
            {{#select data.attackSkill}}
              {{#each config.attackSkills as |name type|}}
                <option value="{{type}}">
                  {{name}}
                </option>
              {{/each}}
            {{/select}}
          </select>
        </td>
        <td>
          <select name="data.damage">
            {{#select data.damage}}
              {{#each config.damageRolls as |name|}}
                <option value="{{name}}">
                  {{name}}
                </option>
              {{/each}}
            {{/select}}
          </select>
        </td>
        <td>
          <select name="data.rof">
            {{#select data.rof}}
              {{#each config.rof as |name|}}
                <option value="{{name}}">
                  {{name}}
                </option>
              {{/each}}
            {{/select}}
          </select>
        </td>
      </tr>
    </table>
    {{editor
      content=data.description
      target="data.description"
      button=true
      owner=owner
      editable=editable
    }}
  </div>
</form>